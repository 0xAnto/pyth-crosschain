{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["pull:env", "^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["BUILD_STANDALONE"]
    },
    "pull:env": {
      "outputs": [".env.local"],
      "cache": false
    },
    "start:dev": {
      "dependsOn": ["pull:env", "^build"],
      "persistent": true,
      "cache": false
    },
    "start:prod": {
      "dependsOn": ["build"],
      "persistent": true,
      "cache": false
    }
  }
}
